<launch>
<!-- Arguments: -->
  <arg name="publish_rate" value="1"/>
  <arg name="frame_id" value="/map"/>
  <!-- IG Results: -->
    <arg name="pcd_file1"
    value="/home/nick/results/ig_maps/ig_graph_slam/ig_scan_2018_07_06_09_15_39/2018_11_24_21_16_49_loc_map.pcd"/>
    <arg name="pcd_file2"
    value="/home/nick/results/ig_maps/ig_graph_slam/ig_scan_2018_07_06_09_15_39/2019_1_11_22_26_15_loc_map.pcd"/>
  <!-- Moose Results: -->
    <!-- <arg name="pcd_file" value="/home/nick/results/moose_maps/Colby-Drive-Snowy-2018-03-07-15-Short-noimu.pcd"/> -->
<!-- Start RVIZ -->
  <node name="rviz_mapping" pkg="rviz" type="rviz"
        args="-d $(find ig_graph_slam)/config/view_results_config.rviz" />

<!-- Run pcl_ros with pcd -->

  <group ns="/cloud_1" >
    <node name="gs_view_results1" pkg="pcl_ros" type="pcd_to_pointcloud"
    args="$(arg pcd_file1) $(arg publish_rate) _frame_id:=$(arg frame_id)" />
  </group>
  <group ns="/cloud_2" >
  <node name="gs_view_results2" pkg="pcl_ros" type="pcd_to_pointcloud"
    args="$(arg pcd_file2) $(arg publish_rate) _frame_id:=$(arg frame_id)" />
  </group>

</launch>
