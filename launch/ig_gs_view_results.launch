    args="$(arg pcd_file1) $(arg publish_rate) _frame_id:=$(arg frame_id)" />
  </group>
  <group ns="/cloud_2" >
  <node name="gs_view_results2" pkg="pcl_ros" type="pcd_to_pointcloud" output="screen"
    args="$(arg pcd_file2) $(arg publish_rate) _frame_id:=$(arg frame_id)" />
  </group>

</launch>
